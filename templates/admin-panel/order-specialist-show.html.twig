{% extends 'pages/home.html.twig' %}

{% block title %}Wizyta #{{ order.visitNumber }}{% endblock %}


{% block content %}
    <div id="" class="container my-24 mx-auto md:px-6 w-full text-white rounded-lg">
        <div class="bg-white overflow-hidden shadow rounded-lg border">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                    Wizyta #{{ order.visitNumber }}
                </h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    Poniżej znajdziesz szczegóły wybranej wizyty.
                </p>
                <a href="/admin/list-all-order-specialist" class="underline text-blue-300 text-sm">Wróć do listy wizyt</a>
            </div>
            <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
                <dl class="sm:divide-y sm:divide-gray-200">
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Numer zamówionej wizyty
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ order.visitNumber }}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Numer zamówionego wzoru kuchni
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ order.productId }}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Adres e-mail
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ order.email }}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Imię
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ order.name }}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Nazwisko
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ order.surname }}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Numer telefonu
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ order.numberPhone }}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Adres wizyty
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ order.address }}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Uwagi do zamówienia
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ order.commentsOrder }}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500 flex items-center space-x-2">
                            <p data-tooltip-target="tooltip-no-arrow" type="button" class="flex items-center text-gray-500 hover:bg-blue-800 focus:ring-4
                                focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm dark:bg-blue-600
                                dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                Cena kuchni
                                <div class="flex items-center justify-center w-5 h-5 font-bold text-blue-700 rounded-full ml-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M12 2a10 10 0 110 20 10 10 0 010-20z" />
                                    </svg>
                                </div>
                            </p>
                            <div id="tooltip-no-arrow" role="tooltip" class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
                                Cena kuchni będzie widoczna po wizycie i dokładnej wycenie
                            </div>
                        </dt>

                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ order.price }} zł
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500 flex items-center space-x-2">
                            <p data-tooltip-target="tooltip-no-arrow1" type="button" class="flex items-center text-gray-500 hover:bg-blue-800 focus:ring-4
                                focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm dark:bg-blue-600
                                dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                                Status płatności
                            <div class="flex items-center justify-center w-5 h-5 font-bold text-blue-700 rounded-full ml-1">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M12 2a10 10 0 110 20 10 10 0 010-20z" />
                                </svg>
                            </div>
                            </p>
                            <div id="tooltip-no-arrow1" role="tooltip" class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
                                Status płatności będzie dostępny gdy klient zdecyduje się na realizację projektu
                            </div>
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {% if order.paymentStatus == 'ZAPŁACONO' %}
                                <strong class="font-bold text-green-600">{{ order.paymentStatus }}</strong>
                            {% else %}
                                <strong class="font-bold text-red-600">{{ order.paymentStatus }}</strong>
                            {% endif %}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Termin wizyty
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ order.visitDate }}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Status zamówionej wizyty
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {% if order.status == 'WIZYTA ZREALIZOWANA' %}
                                <strong class="font-bold text-green-600">{{ order.status }}</strong>
                            {% elseif order.status == 'TERMIN WIZYTY USTALONY' %}
                                <strong class="font-bold text-green-300">{{ order.status }}</strong>
                            {% elseif order.status == 'ANULOWANO PRZEZ KLIENTA' %}
                                <strong class="font-bold text-red-600">{{ order.status }}</strong>
                            {% else %}
                                <strong class="font-bold text-yellow-600">{{ order.status }}</strong>
                            {% endif %}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Data złożenia zamówienia
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ order.orderDate }}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Adnotacja pracownika obsługi
                        </dt>
                        <dd class="mt-1 font-bold text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {{ order.adminComment }}
                        </dd>
                    </div>
                    <div class="py-3 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">
                            Akcje
                        </dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            {% if order.status == 'WIZYTA ZREALIZOWANA' %}
                                <form method="post" action="{{ path('app_list_all_order_specialist_date_set', {'id': order.id}) }}">
                                    <button type="submit" class="text-green-300 font-bold">TERMIN WIZYTY USTALONY</button>
                                </form>
                                <form method="post" action="{{ path('app_list_all_order_specialist_setting_date', {'id': order.id}) }}">
                                    <button type="submit" class="text-yellow-600 font-bold">USTALANIE TERMINU</button>
                                </form>
                                <form method="post" action="{{ path('app_list_all_order_specialist_cancel', {'id': order.id}) }}">
                                    <button type="submit" class="text-red-600 font-bold">ANULOWANO PRZEZ KLIENTA</button>
                                </form>
                            {% elseif order.status == 'TERMIN WIZYTY USTALONY' %}
                                <form method="post" action="{{ path('app_list_all_order_specialist_cancel', {'id': order.id}) }}">
                                    <button type="submit" class="text-red-600 font-bold">ANULOWANO PRZEZ KLIENTA</button>
                                </form>
                                <form method="post" action="{{ path('app_list_all_order_specialist_setting_date', {'id': order.id}) }}">
                                    <button type="submit" class="text-yellow-600 font-bold">USTALANIE TERMINU</button>
                                </form>
                                <form method="post" action="{{ path('app_list_all_order_specialist_done', {'id': order.id}) }}">
                                    <button type="submit" class="text-green-600 font-bold">WIZYTA ZREALIZOWANA</button>
                                </form>
                            {% elseif order.status == 'USTALANIE TERMINU' %}
                                <form method="post" action="{{ path('app_list_all_order_specialist_done', {'id': order.id}) }}">
                                    <button type="submit" class="text-green-600 font-bold">WIZYTA ZREALIZOWANA</button>
                                </form>
                                <form method="post" action="{{ path('app_list_all_order_specialist_cancel', {'id': order.id}) }}">
                                    <button type="submit" class="text-red-600 font-bold">ANULOWANO PRZEZ KLIENTA</button>
                                </form>
                                <form method="post" action="{{ path('app_list_all_order_specialist_date_set', {'id': order.id}) }}">
                                    <button type="submit" class="text-green-300 font-bold">TERMIN WIZYTY USTALONY</button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('app_list_all_order_specialist_date_set', {'id': order.id}) }}">
                                    <button type="submit" class="text-green-300 font-bold">TERMIN WIZYTY USTALONY</button>
                                </form>
                                <form method="post" action="{{ path('app_list_all_order_specialist_setting_date', {'id': order.id}) }}">
                                    <button type="submit" class="text-yellow-600 font-bold">USTALANIE TERMINU</button>
                                </form>
                                <form method="post" action="{{ path('app_list_all_order_specialist_done', {'id': order.id}) }}">
                                    <button type="submit" class="text-green-600 font-bold">WIZYTA ZREALIZOWANA</button>
                                </form>
                            {% endif %}
                            {% if order.paymentStatus == 'DO ZAPŁATY' %}
                                <form method="post" action="{{ path('app_list_all_order_specialist_price_YES', {'id': order.id}) }}">
                                    <button type="submit" class="text-green-600 font-bold">ZAPŁACONO</button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('app_list_all_order_specialist_price_NO', {'id': order.id}) }}">
                                    <button type="submit" class="text-red-600 font-bold">DO ZAPŁATY</button>
                                </form>
                            {% endif %}
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <form method="post" action="{{ path('app_list_all_order_specialist_delete', {'id': order.id}) }}" onsubmit="return confirm('Czy na pewno chcesz usunąć wizytę?');">
                                    <button type="submit" class="text-red-600 font-bold mt-2">USUŃ WIZYTĘ</button>
                                </form>
                                <form class="mt-2" method="post" action="{{ path('app_list_all_order_specialist_update_price', {'id': order.id}) }}" onsubmit="return confirm('Czy na pewno chcesz zmienić cenę zamówienia?');">
                                    <div class="form-group">
                                        <label for="newPrice" class="text-blue-600 font-bold mt-2">NOWA CENA:</label>
                                        <input type="number" class="placeholder-gray-500 border" placeholder="Podaj nową cenę" id="newPrice" name="newPrice" required min="0" step="0.01">
                                    </div>
                                    <button type="submit" class="text-blue-600 font-bold mt-2">ZMIEŃ CENĘ ZAMÓWIENIA</button>
                                </form>
                                <form class="mt-2" method="post" action="{{ path('app_list_all_order_specialist_comment', {'id': order.id}) }}" onsubmit="return confirm('Czy na pewno chcesz dodać adnotację?');">
                                    <div class="form-group">
                                        <label for="adnotation" class="text-yellow-600 font-bold mt-2">ADNOTACJA:</label>
                                        <input type="text" class="placeholder-gray-500 border" placeholder="Adnotacja" id="adnotation" name="adnotation">
                                    </div>
                                    <button type="submit" class="text-yellow-600 font-bold mt-2">DODAJ ADNOTACJĘ</button>
                                </form>
                                <form class="mt-2" method="post" action="{{ path('app_list_all_order_specialist_add_date_visit', {'id': order.id}) }}" onsubmit="return confirm('Czy na pewno chcesz ustawić termin wizyty?');">
                                    <div class="form-group">
                                        <label for="newPrice" class="text-black font-bold mt-2">DODAJ TERMIN WIZYTY:</label>
                                        <input type="text" class="placeholder-gray-500 border" placeholder="Termin wizyty" id="date-visit" name="date-visit">
                                    </div>
                                    <button type="submit" class="text-black font-bold mt-2">DODAJ TERMIN WIZYTY</button>
                                </form>
                            {% endif %}
                        </dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>
{% endblock %}
