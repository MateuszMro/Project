{% extends 'pages/home.html.twig' %}



{% block title %}Zamówienie wizyty {% endblock %}


{% block content %}
    <div id="" class="container my-24 mx-auto md:px-6 md:py-6 w-full text-white rounded-lg flex justify-center" style="background-image: url('/upload/gallery/10030.jpg')">
        <div class="bg-white/30 overflow-hidden shadow rounded-lg border w-[600px] my-10" style="backdrop-filter: blur(8px)">
            <div class="px-4 py-5 sm:px-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900">
                    Zamówienie wizyty specjalisty
                </h3>
                <p class="mt-1 max-w-2xl text-sm text-gray-500">
                    Po zamówieniu wizyty specjalisty oczekuj na kontakt pracownika celem ustalenia dogodnego terminu. Termin będzie również widoczny
                    po zalogowaniu w panelu klienta.
                </p>
            </div>
            <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
                {{ form_start(orderSpecialistForm, {'attr': {'class': 'sm:divide-y sm:divide-gray-200 text-black flex justify-center'}}) }}
                <div class="mt-3 w-full px-6">
                    {{ form_row(orderSpecialistForm.name, {'attr': {
                        'placeholder': 'Imię',
                        'autofocus': true,
                        'class': 'mb-2 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none
                                focus:shadow-outline border-black'}}) }}
                    {{ form_row(orderSpecialistForm.surname, {'attr': {
                        'placeholder': 'Nazwisko',
                        'class': 'mb-2 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none
                                focus:shadow-outline border-black'}}) }}
                    {{ form_row(orderSpecialistForm.email, {'attr': {
                        'placeholder': 'example@gmail.com',
                        'class': 'mb-2 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none
                                focus:shadow-outline border-black'}}) }}
                    {{ form_row(orderSpecialistForm.numberPhone, {'attr': {
                        'placeholder': 'Numer telefonu',
                        'class': 'mb-2 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none
                                focus:shadow-outline border-black'}}) }}
                    {{ form_row(orderSpecialistForm.address, {'attr': {
                        'placeholder': 'Adres wizyty',
                        'class': 'mb-2 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none
                                focus:shadow-outline border-black'}}) }}
                    {{ form_row(orderSpecialistForm.productId, {'attr': {
                        'placeholder': '5 cyfrowy numer produktu',
                        'class': 'mb-2 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none
                                focus:shadow-outline border-black'}}) }}
                    {{ form_row(orderSpecialistForm.commentsOrder, {'attr': {
                        'placeholder': 'Dodatkowe informacje',
                        'class': 'mb-1 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none
                                focus:shadow-outline border-black'}}) }}
                    <div class="flex items-center">
                        {{ form_label(orderSpecialistForm.acceptTerms) }}
                        {{ form_widget(orderSpecialistForm.acceptTerms, {'attr': {
                            'class': 'ml-1 w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded
                                 dark:ring-offset-gray-800 focus:ring-1 dark:bg-gray-700 dark:border-gray-600'}}) }}
                    </div>
                    {% if orderSpecialistForm.vars.errors|length > 0 %}
                        <div class="text-red-500 text-xs font-bold">
                            <ul>
                                {% for error in orderSpecialistForm.vars.errors %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                    <button type="submit" class="mt-2 mb-2 w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium
                                    rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                        Złóż zamówienie
                    </button>
                </div>
                {{ form_end(orderSpecialistForm) }}
            </div>
        </div>
    </div>

{% endblock %}